{
  "name": "fastify-cloud-function",
  "version": "0.0.0",
  "description": "Fastify plugin to handle deployin an application to Cloud Functions",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "tap --cov test/**/*.test.js && npm run test:ts && npm run lint",
    "test:ci": "tap --cov test/**/*.test.js && npm run test:ts && npm run lint:ci",
    "test:only": "tap --only",
    "test:unit": "tap test/**/*.test.js",
    "test:ts": "tsd",
    "lint": "standard | snazzy",
    "lint:ci": "standard",
    "release": "npx standard-version"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metcoder95/fastify-cloud-function.git"
  },
  "readme": "https://github.com/metcoder95/fastify-cloud-function/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/metcoder95/fastify-cloud-function/issues"
  },
  "author": "metcoder95 <me@metcoder.dev>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.62",
    "husky": "^7.0.2",
    "snazzy": "^9.0.0",
    "standard": "^16.0.4",
    "tap": "^16.3.0",
    "tsd": "^0.24.1",
    "typescript": "^4.8.4"
  },
  "tsd": {
    "directory": "test"
  },
  "tap": {
    "check-coverage": false
  },
  "standard": {
    "ignore": [
      "*.d.ts",
      "*.test-d.ts"
    ]
  }
}
